{% form_theme form _self %}
{% block page_content %}
    {#{% form_theme form 'widget/fields-block.html.twig' %}#}
    <div class="modal-header bg-secondary-gradient">
        <h2 class="modal-title" style="margin-top: -15px;color: white">NOUVEAU-{{ titre | upper  }}
        </h2>
        <button class="btn-close" data-bs-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
        </button>
    </div>
    {{ form_start(form, {'attr': {'role':'form', 'class': 'form'}}) }}
    <div class="modal-body ">
      {#  {{ include('admin/_includes/entete_modal.html.twig') }}#}

        <div class="row">
            <div class="form-group col-md-12 mb-2">
                <label class="sr-onl" for="userinput1">Titre</label>
                {{ form_widget(form.titre,{'attr':{'class':'form-control border-primary','id':'userinput1','placeholder':'Titre','required':'required'}}) }}
                {# <input type="text" id="userinput1" class="form-control border-primary" placeholder="Compte contribuable" name="name">#}
            </div>

        </div>
        <div class="row">

            <div class="form-group col-md-2 mb-2">
                {# <label class="sr-onl" for="userinput1">Image</label>#}
                {#  {{ form_widget(form.image,{'attr':{'class':'form-control border-primary','id':'userinput1','placeholder':'Image'}}) }}#}
                <div class="image-input image-input-outline" id="kt_image_1">
                    <div class="image-input-wrapper" style="background-image: url('{{ asset('admin/assets/media/users/blank.png') }}')"></div>
                    <label class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="change" data-toggle="tooltip" title="" data-original-title="Change avatar">
                        <i class="fa fa-pen icon-sm text-muted"></i>
                        {{ form_widget(form.logo,{'attr':{'type':'file','name':'profile_avatar','accept':'.png, .jpg, .jpeg','placeholder':'Image'}}) }}
                        {# <input type="file" name="profile_avatar" accept=".png, .jpg, .jpeg">#}
                        <input type="hidden" name="profile_avatar_remove">
                    </label>
                    <span class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="cancel" data-toggle="tooltip" title="" data-original-title="Cancel avatar">
															<i class="ki ki-bold-close icon-xs text-muted"></i>
														</span>
                </div>
                {# <input type="text" id="userinput1" class="form-control border-primary" placeholder="Compte contribuable" name="name">#}
            </div>
        </div><!-- row -->
        <div class="row">
            <div class="form-group col-md-6 mb-2">
                <label class="sr-onl" for="userinput1">Couleur header</label>
                {{ form_widget(form.couleurHeader,{'attr':{'class':'form-control border-primary','id':'userinput1','placeholder':'Couleur header'}}) }}
                {# <input type="text" id="userinput1" class="form-control border-primary" placeholder="Compte contribuable" name="name">#}
            </div>
            <div class="form-group col-md-6 mb-2">
                <label class="sr-onl" for="userinput2">Couleur side</label>
                {{ form_widget(form.couleurSide,{'attr':{'class':'form-control border-primary','id':'userinput2','placeholder':'Couleur side'}}) }}

            </div>

        </div>

    </div>
    <div class="modal-footer">
        <a href="{{ path('parametre') }}" class="btn btn-secondary">Fermer</a>
        <button type="submit" class="btn btn-primary btn-ajax">Valider</button>
    </div>
    {{ form_end(form) }}
{% endblock %}
{% block javascripts %}{#
    <script src="{{ asset('admin/assets/js/image.js') }}"></script>#}
    <script src="{{ asset('admin/assets/js/upload.js') }}"></script>
    <script src="{{ asset('admin/assets/js/pages/crud/file-upload/image-input-v=7.1.2.js') }}"></script>
{% endblock %}
