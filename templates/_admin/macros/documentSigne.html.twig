{% macro document(document) %}

    <div class="row">
        <div class="col-md-3 ">
            {{ form_row(document.libelle,{'attr':{'class':'form-control motif','id':'userinput16','placeholder':'Titre'}}) }}
        </div>
        <div class="col-md-3 ">
            {{ form_row(document.date,{'attr':{'class':'form-control motif','id':'userinput16','placeholder':'Image'}}) }}
        </div>
        <div class="col-md-3 ">
            {{ form_row(document.path,{'attr':{'class':'form-control motif','id':'userinput16','placeholder':'documents en pdf'}}) }}
        </div>
        {% if document.children.path.vars.data %}
            <div class="col-md-1 ">
                <a class="btn btn-dark" target="_blank" href="{{ asset('uploads/images/' ~ document.children.path.vars.data) }}" download> <i class="fe fe-upload"></i>
                    <i class="fe fe-folder"></i></a>
                {#<button type="button" class="btn btn-dark">Upload</button>#}
            </div>
        {% endif %}
        <div class="col-md-1  supprimer">

        </div>

    </div>


{% endmacro document %}