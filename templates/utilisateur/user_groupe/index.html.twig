{% extends '_admin/_includes/index.html.twig.twig' %}

{% block title %}Liste des user_groupes{% endblock %}

{% block page_content %}
    <div class="card card-custom mt-4">
        <div class="card-header">
            <div class="col-md-10">
                <h3 class="card-title">Liste des groupes</h3>
            </div>
            <div class="col-md-2">
                <a href="{{ path('app_utilisateur_user_groupe_new') }}" class="btn btn-primary font-weight-bolder"  
                    data-bs-toggle="modal" data-bs-target="#largemodal">>
                    <span class="svg-icon svg-icon-md"><i class="ki ki-solid-plus"></i></span>
                    Nouveau
                </a>
            </div>
        </div>
        <div class="card-body">
            <!--begin: Search Form-->
            <!--begin::Search Form-->
            <div class="row">
                <div class="col-sm-12">
                    <div id="grid_app_utilisateur_user_groupe" class="grid-dt-wrapper">Chargement....</div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    <script src="{{ asset('assets/js/datatable.js') }}"></script>
    <script> 
        $(function() { 
              $('#grid_app_utilisateur_user_groupe').initDataTables({{ datatable_settings(datatable) }}, {
                  searching: true,
                  ajaxUrl: "{{ path('app_utilisateur_user_groupe_index') }}",
                  language: {
                      url: asset_base_path + "/js/i18n/French.json"
                  }
              });
        });
    </script>
{% endblock %}
